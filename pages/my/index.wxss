/* pages/my/index.wxss */

page{
    height: 100%;
    background-color:#fafafa;
}

.container {
  display: flex;
  flex-direction: column;
}


.head-container{
  width: 100%;
  height: 300rpx;
  left:0px;
	top:0px;
	position: absolute;
  display: flex;
  flex-direction: row;
  align-items:center;
}

.head-container-bg{
  width: 100%;
  height: 100%;
  position: absolute;
  left:0px;
	top:0px;
	z-index:-1;
}

.head-view{
  display: flex;
  flex-direction: row;
  width: 400rpx;
  height: 120rpx;
  align-items: center;
}

.head-view image{
  width: 120rpx;
  height: 120rpx;
  margin-left: 40rpx;
  border-radius: 58rpx;
}

.head-view text{
  font-size: 16px;
  color: #fff;
  margin-left: 40rpx;
}


.order-container{
  width: 100%;
  height: 140rpx;
  display: flex;
  flex-direction: row;
  align-items:center;
  margin-top: 300rpx;
  justify-content:space-around;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
}

.order-view{
  display: flex;
  flex-direction: column;
  align-items:center;
  
}

.order-view image{
  width: 50rpx;
  height: 50rpx;
}

.order-view text{
  font-size: 12px;
  color: #999;
  margin-top: 5px;
}

.item{
  margin-top: 20px;
  border-bottom: 1px solid #ededed;
}

.item-container{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items:center;
  justify-content:space-between;
  background-color: #fff;
  border-top: 1px solid #ededed;
}

.item-left{
  width: 300rpx;
  display: flex;
  flex-direction: row;
  align-items:center;
  margin-left: 40rpx;
}

.item-left image{
  width: 50rpx;
  height: 50rpx;
}


.item-left text{
  font-size: 12px;
  color: #999;
  margin-left: 10rpx;
}

.item-arrow{
  width: 25rpx;
  height: 50rpx;
  margin-right: 40rpx;
}


