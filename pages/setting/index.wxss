/* pages/setting/index.wxss */
page {
  height: 100%;
  background-color: #f2f2f2;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 10px;
}

.item-container{
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx 0 20rpx;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}

.item-arrow {
  width: 25rpx;
  height: 50rpx;
}

.exit-view{
  margin: 20px 20rpx 0 20rpx;
}