/* pages/address/address/index.wxss */

page {
  height: 100%;
  background-color: #f2f2f2;
}

.content-container{
  display: flex;
  flex-direction: column;
  background-color: #f2f2f2;
  margin-top: 10px;
}

.content-item-container{
  width: 100%;
  height: 50px;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #eee;
  align-items: center;
  padding: 0 0 0 20rpx;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  background-color: #fff;
}

.content-item-container text{
  width: 150rpx;
  font-size: 14px;
  color: #333;
  margin-right: 20rpx;
}

.content-item-container input{
  font-size: 28rpx;
}

.new-btn{
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  padding: 10px 20rpx 10px 20rpx;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  background-color: #f2f2f2;
  z-index: 2;
}