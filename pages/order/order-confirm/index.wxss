/* pages/order/order-confirm/index.wxss */

page {
  height: 100%;
  background-color: #f2f2f2;
}

.order-container {
  display: flex;
  flex-direction: column;
}

.address-container {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 0 20rpx 0 20rpx;
  box-sizing:border-box;
  -moz-box-sizing: border-box;
  margin-top: 5px;
  margin-bottom: 10px;
}

.address-container text{
  font-size: 14px;
  color: #333;
}

.item-arrow {
  width: 25rpx;
  height: 50rpx;
}

.item-container image {
  width: 135rpx;
  height: 135rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.item-container{
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1px solid #eee;
  background-color: #fff;
}

.item-right-container{
  display: flex;
  flex-direction: column;
  margin: 5px 20rpx 5px 10rpx;
  width: 100%;
}

.item-right-foot-container{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 2px 0 2px 0;
}

.item-desc {
  font-size: 14px;
  color: #333;
  width: 500rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.item-sku {
  font-size: 12px;
  color: #666;
  margin-top: 3px;
  width: 500rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.item-price {
  font-size: 14px;
  color: #e64340;
}

.item-count{
  font-size: 12px;
  color: #666;
}

.pay-container{
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  box-sizing:border-box;
  -moz-box-sizing: border-box;
  padding: 0 20rpx 0 20rpx;
}

.pay-title{
  font-size: 12px;
  color: #666;
}

.pay-type{
  font-size: 14px;
  color: #333;
}

.foot-container{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #eee;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #fff;
}

.total-view{
  font-size: 14px;
  color: #e64340;
  margin-left: 20rpx;
}

.submit-view{
  width: 300rpx;
  height: 100%;
  line-height: 88rpx;
  background-color: #e64340;
  text-align: center;
  color: #fff;
}

.name-view{
  font-size: 14px;
  color: #333;
  margin: 5px 0 0 20rpx;
}

.address-view{
  font-size: 10px;
  color: #666;
  margin: 0 0 0 20rpx;
}

.address-content{
  display: flex;
  flex-direction: column;
}
