page {
  height: 100%;
  background-color: #f2f2f2;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 10px;
}

.item-container{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 3px 20rpx 3px 20rpx;
  box-sizing: border-box;
  -moz-box-sizing: border-box;
  border-bottom: 1px solid #eee;
  background-color: #fff;
}

.item-title{
font-size: 16px;
color: #666;
}
